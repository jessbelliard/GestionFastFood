@model GestionFastFood.Models.Mesa

<h2>Crear Mesa</h2>

<form asp-action="CreateMesa" method="post">
    <div class="form-group">
        <label for="NumeroMesa">Numero de la Mesa</label>
        <input asp-for="NumeroMesa" class="form-control" id="NumeroMesa" />
        <span asp-validation-for="NumeroMesa" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label for="Estado">Estado</label>
        <select asp-for="Estado" class="form-control" id="Estado">
            <option value="Disponible">Disponible</option>
            <option value="Reservada">Reservada</option>
            <option value="Ocupada">Ocupada</option>
        </select>
        <span asp-validation-for="Estado" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">Crear</button>
</form>
