@model GestionFastFood.Models.Mesa

<h2>Editar Mesa</h2>

<form asp-action="EditarMesa" method="post">
    <input type="hidden" asp-for="MesaId" />
    <div class="form-group">
        <label for="NumeroMesa">Nombre de la Mesa</label>
        <input asp-for="NumeroMesa" class="form-control" id="NumeroMesa" />
        <span asp-validation-for="NumeroMesa" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label for="Estado">Estado</label>
        <select asp-for="Estado" class="form-control" id="Estado">
            <option value="Disponible">Disponible</option>
            <option value="Reservada">Reservada</option>
            <option value="Ocupada">Ocupada</option>
        </select>
        <span asp-validation-for="Estado" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">Guardar Cambios</button>
</form>
