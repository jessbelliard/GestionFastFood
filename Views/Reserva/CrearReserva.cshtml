@model GestionFastFood.Models.Reserva;

<h>Crear Reservas</h>
<form asp-action="CrearReserva" method="post">
    <div class="form-group">
        <label>Mesa</label>
        <select asp-for="MesaId" asp-items="ViewBag.Mesas" class="form-control"></select>
    </div>
    <div class="form-group">
        <label>Nombre del Cliente</label>
        <input asp-for="ClienteNombre" class="form-control" />
    </div>
    <div class="form-group">
        <label>Fecha de la Reserva</label>
        <input asp-for="FechaReserva" class="form-control" type="datetime-local" />
    </div>
    <div class="form-group">
        <label>Cantidad de Personas</label>
        <input asp-for="CantidadPersonas"class="form-control"type="number" min="1" max="20" />
   
    </div>
    <button type="submit" class="btn btn-primary">Crear Reserva</button
</form>
